extends layout

block content
  h1= title

  form(action="" method="POST")
    div.form-group 
      label(for="plant-type") #{title}:
      input#plant-type.form-control(type="text", placeholder="New plant type name" name="name" required value=(type === undefined ? '' : type.name))

    button.btn.btn-primary(type="submit") Submit

  if errors 
    ul
      for error in errors
        li!= error.msg