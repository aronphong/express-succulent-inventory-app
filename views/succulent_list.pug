extends layout

block content
  h1= title

  ul
    - succulent_list.sort( (a, b) => { let textA= a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0 });
    each succulent in succulent_list
      li 
          a(href=succulent.url) #{succulent.name} 
          | (#{succulent.nickname})
    else
      li 
        There are no succulents.