extends layout

block content
  h1= title

  form(action="" method="POST")
    div.form-group 
      label(for="name") #{title}:
      input#name.form-control(type="text", placeholder="New Category Name" name="name" value=(category === undefined ? '' : category.name) required )

    button.btn.btn-primary(type="submit") Submit
  

  if errors
    ul
      for error in errors
        li!= error.msg